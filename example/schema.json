{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/ImageDefinition",
  "$defs": {
    "AddGroup": {
      "properties": {
        "GroupName": {
          "type": "string",
          "yaml": "name"
        },
        "GroupID": {
          "type": "string",
          "yaml": "id"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "GroupName"
      ]
    },
    "AddUser": {
      "properties": {
        "UserName": {
          "type": "string",
          "yaml": "name"
        },
        "UserID": {
          "type": "string",
          "yaml": "id"
        },
        "Password": {
          "type": "string",
          "yaml": "password"
        },
        "PasswordType": {
          "type": "string",
          "enum": [
            "text",
            "hash"
          ],
          "yaml": "password-type"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "UserName",
        "PasswordType"
      ]
    },
    "Artifact": {
      "properties": {
        "Img": {
          "items": {
            "$ref": "#/$defs/Img"
          },
          "type": "array",
          "yaml": "img"
        },
        "Iso": {
          "items": {
            "$ref": "#/$defs/Iso"
          },
          "type": "array",
          "yaml": "iso"
        },
        "Qcow2": {
          "items": {
            "$ref": "#/$defs/Qcow2"
          },
          "type": "array",
          "yaml": "qcow2"
        },
        "Manifest": {
          "$ref": "#/$defs/Manifest",
          "yaml": "manifest"
        },
        "Filelist": {
          "$ref": "#/$defs/Filelist",
          "yaml": "filelist"
        },
        "Changelog": {
          "$ref": "#/$defs/Changelog",
          "yaml": "changelog"
        },
        "RootfsTar": {
          "$ref": "#/$defs/RootfsTar",
          "yaml": "rootfs-tarball"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Changelog": {
      "properties": {
        "ChangelogName": {
          "type": "string",
          "yaml": "name"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ChangelogName"
      ]
    },
    "CloudInit": {
      "properties": {
        "MetaData": {
          "type": "string",
          "yaml": "meta-data"
        },
        "UserData": {
          "type": "string",
          "yaml": "user-data"
        },
        "NetworkConfig": {
          "type": "string",
          "yaml": "network-config"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "CopyFile": {
      "properties": {
        "Dest": {
          "type": "string",
          "yaml": "destination"
        },
        "Source": {
          "type": "string",
          "yaml": "source"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Dest",
        "Source"
      ]
    },
    "Customization": {
      "properties": {
        "Components": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "yaml": "components"
        },
        "Pocket": {
          "type": "string",
          "enum": [
            "release",
            "Release",
            "updates",
            "Updates",
            "security",
            "Security",
            "proposed",
            "Proposed"
          ],
          "yaml": "pocket"
        },
        "Installer": {
          "$ref": "#/$defs/Installer",
          "yaml": "installer"
        },
        "CloudInit": {
          "$ref": "#/$defs/CloudInit",
          "yaml": "cloud-init"
        },
        "ExtraPPAs": {
          "items": {
            "$ref": "#/$defs/PPA"
          },
          "type": "array",
          "yaml": "extra-ppas"
        },
        "ExtraPackages": {
          "items": {
            "$ref": "#/$defs/Package"
          },
          "type": "array",
          "yaml": "extra-packages"
        },
        "ExtraSnaps": {
          "items": {
            "$ref": "#/$defs/Snap"
          },
          "type": "array",
          "yaml": "extra-snaps"
        },
        "Fstab": {
          "items": {
            "$ref": "#/$defs/Fstab"
          },
          "type": "array",
          "yaml": "fstab"
        },
        "Manual": {
          "$ref": "#/$defs/Manual",
          "yaml": "manual"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Pocket"
      ]
    },
    "Execute": {
      "properties": {
        "ExecutePath": {
          "type": "string",
          "yaml": "path"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ExecutePath"
      ]
    },
    "Filelist": {
      "properties": {
        "FilelistName": {
          "type": "string",
          "yaml": "name"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "FilelistName"
      ]
    },
    "Fstab": {
      "properties": {
        "Label": {
          "type": "string",
          "yaml": "label"
        },
        "Mountpoint": {
          "type": "string",
          "yaml": "mountpoint"
        },
        "FSType": {
          "type": "string",
          "yaml": "filesystem-type"
        },
        "MountOptions": {
          "type": "string",
          "yaml": "mount-options"
        },
        "Dump": {
          "type": "boolean",
          "yaml": "dump"
        },
        "FsckOrder": {
          "type": "integer",
          "yaml": "fsck-order"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Label",
        "Mountpoint",
        "FSType",
        "MountOptions",
        "FsckOrder"
      ]
    },
    "Gadget": {
      "properties": {
        "Ref": {
          "type": "string",
          "yaml": "ref"
        },
        "GadgetTarget": {
          "type": "string",
          "yaml": "target"
        },
        "GadgetBranch": {
          "type": "string",
          "yaml": "branch"
        },
        "GadgetType": {
          "type": "string",
          "enum": [
            "git",
            "directory",
            "prebuilt"
          ],
          "yaml": "type"
        },
        "GadgetURL": {
          "type": "string",
          "format": "uri",
          "yaml": "url"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "GadgetType"
      ]
    },
    "ImageDefinition": {
      "properties": {
        "ImageName": {
          "type": "string",
          "yaml": "name"
        },
        "DisplayName": {
          "type": "string",
          "yaml": "display-name"
        },
        "Revision": {
          "type": "integer",
          "yaml": "revision"
        },
        "Architecture": {
          "type": "string",
          "yaml": "architecture"
        },
        "Series": {
          "type": "string",
          "yaml": "series"
        },
        "Kernel": {
          "type": "string",
          "yaml": "kernel"
        },
        "Gadget": {
          "$ref": "#/$defs/Gadget",
          "yaml": "gadget"
        },
        "ModelAssertion": {
          "type": "string",
          "format": "uri",
          "yaml": "model-assertion"
        },
        "Rootfs": {
          "$ref": "#/$defs/Rootfs",
          "yaml": "rootfs"
        },
        "Customization": {
          "$ref": "#/$defs/Customization",
          "yaml": "customization"
        },
        "Artifacts": {
          "$ref": "#/$defs/Artifact",
          "yaml": "artifacts"
        },
        "Class": {
          "type": "string",
          "enum": [
            "preinstalled",
            "cloud",
            "installer"
          ],
          "yaml": "class"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ImageName",
        "DisplayName",
        "Architecture",
        "Series",
        "Rootfs",
        "Class"
      ]
    },
    "Img": {
      "properties": {
        "ImgName": {
          "type": "string",
          "yaml": "name"
        },
        "ImgVolume": {
          "type": "string",
          "yaml": "volume"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ImgName",
        "ImgVolume"
      ]
    },
    "Installer": {
      "properties": {
        "Preseeds": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "yaml": "preseeds"
        },
        "Layers": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "yaml": "layers"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Iso": {
      "properties": {
        "IsoName": {
          "type": "string",
          "yaml": "name"
        },
        "IsoVolume": {
          "type": "string",
          "yaml": "volume"
        },
        "Command": {
          "type": "string",
          "yaml": "xorriso-command"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "IsoName",
        "IsoVolume"
      ]
    },
    "MakeDirs": {
      "properties": {
        "Path": {
          "type": "string",
          "yaml": "path"
        },
        "Permissions": {
          "type": "integer",
          "yaml": "permissions"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Path",
        "Permissions"
      ]
    },
    "Manifest": {
      "properties": {
        "ManifestName": {
          "type": "string",
          "yaml": "name"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ManifestName"
      ]
    },
    "Manual": {
      "properties": {
        "MakeDirs": {
          "items": {
            "$ref": "#/$defs/MakeDirs"
          },
          "type": "array",
          "yaml": "make-dirs"
        },
        "CopyFile": {
          "items": {
            "$ref": "#/$defs/CopyFile"
          },
          "type": "array",
          "yaml": "copy-file"
        },
        "Execute": {
          "items": {
            "$ref": "#/$defs/Execute"
          },
          "type": "array",
          "yaml": "execute"
        },
        "TouchFile": {
          "items": {
            "$ref": "#/$defs/TouchFile"
          },
          "type": "array",
          "yaml": "touch-file"
        },
        "AddGroup": {
          "items": {
            "$ref": "#/$defs/AddGroup"
          },
          "type": "array",
          "yaml": "add-group"
        },
        "AddUser": {
          "items": {
            "$ref": "#/$defs/AddUser"
          },
          "type": "array",
          "yaml": "add-user"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "PPA": {
      "properties": {
        "PPAName": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_.+-]+/[a-zA-Z0-9_.+-]+$",
          "yaml": "name"
        },
        "Auth": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_.+-]+:[a-zA-Z0-9]+$",
          "yaml": "auth"
        },
        "Fingerprint": {
          "type": "string",
          "yaml": "fingerprint"
        },
        "KeepEnabled": {
          "type": "boolean",
          "yaml": "keep-enabled"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "PPAName",
        "KeepEnabled"
      ]
    },
    "Package": {
      "properties": {
        "PackageName": {
          "type": "string",
          "yaml": "name"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "PackageName"
      ]
    },
    "Qcow2": {
      "properties": {
        "Qcow2Name": {
          "type": "string",
          "yaml": "name"
        },
        "Qcow2Volume": {
          "type": "string",
          "yaml": "volume"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Qcow2Name",
        "Qcow2Volume"
      ]
    },
    "Rootfs": {
      "oneOf": [
        {
          "required": [
            "Seed"
          ],
          "title": "Seed"
        },
        {
          "required": [
            "Tarball"
          ],
          "title": "Tarball"
        },
        {
          "required": [
            "ArchiveTasks"
          ],
          "title": "ArchiveTasks"
        }
      ],
      "properties": {
        "Components": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "yaml": "components"
        },
        "Archive": {
          "type": "string",
          "yaml": "archive"
        },
        "Flavor": {
          "type": "string",
          "yaml": "flavor"
        },
        "Mirror": {
          "type": "string",
          "yaml": "mirror"
        },
        "Pocket": {
          "type": "string",
          "enum": [
            "release",
            "Release",
            "updates",
            "Updates",
            "security",
            "Security",
            "proposed",
            "Proposed"
          ],
          "yaml": "pocket"
        },
        "Seed": {
          "$ref": "#/$defs/Seed",
          "yaml": "seed"
        },
        "Tarball": {
          "$ref": "#/$defs/Tarball",
          "yaml": "tarball"
        },
        "ArchiveTasks": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "yaml": "archive-tasks"
        },
        "SourcesListDeb822": {
          "type": "boolean",
          "yaml": "sources-list-deb822"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Archive",
        "Flavor",
        "Mirror",
        "Pocket",
        "SourcesListDeb822"
      ]
    },
    "RootfsTar": {
      "properties": {
        "RootfsTarName": {
          "type": "string",
          "yaml": "name"
        },
        "Compression": {
          "type": "string",
          "enum": [
            "uncompressed",
            "bzip2",
            "gzip",
            "xz",
            "zstd"
          ],
          "yaml": "compression"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "RootfsTarName",
        "Compression"
      ]
    },
    "Seed": {
      "properties": {
        "SeedBranch": {
          "type": "string",
          "yaml": "branch"
        },
        "SeedURLs": {
          "items": {
            "type": "string",
            "format": "uri"
          },
          "type": "array",
          "yaml": "urls"
        },
        "Names": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "yaml": "names"
        },
        "Vcs": {
          "type": "boolean",
          "yaml": "vcs"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "SeedURLs",
        "Names",
        "Vcs"
      ]
    },
    "Snap": {
      "properties": {
        "SnapName": {
          "type": "string",
          "yaml": "name"
        },
        "SnapRevision": {
          "type": "integer",
          "yaml": "revision"
        },
        "Store": {
          "type": "string",
          "yaml": "store"
        },
        "Channel": {
          "type": "string",
          "yaml": "channel"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "SnapName",
        "Store",
        "Channel"
      ]
    },
    "Tarball": {
      "properties": {
        "TarballURL": {
          "type": "string",
          "format": "uri",
          "yaml": "url"
        },
        "GPG": {
          "type": "string",
          "format": "uri",
          "yaml": "gpg"
        },
        "SHA256sum": {
          "type": "string",
          "maxLength": 64,
          "minLength": 64,
          "yaml": "sha256sum"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "TarballURL"
      ]
    },
    "TouchFile": {
      "properties": {
        "TouchPath": {
          "type": "string",
          "yaml": "path"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "TouchPath"
      ]
    }
  }
}